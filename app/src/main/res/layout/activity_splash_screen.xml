<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/logoSS"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/logo_ss" />

    <TextView
        android:id="@+id/titleSS"
        android:layout_width="300dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/logoSS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Klasifikasi Kematangan Buah Tin Menggunakan Convolutional Neural Network (CNN) Berbasis Android" />


</RelativeLayout>